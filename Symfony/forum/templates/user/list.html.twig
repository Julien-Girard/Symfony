{% block title %}Hello PersonneController!{% endblock %}

{% block body %}


<div class="example-wrapper">
    <h1>Hello! ✅</h1>
    <table>
    	<tr>
    		<th>ID</th>
    		<th>Pseudo</th>
    		<th>Password</th>
    		<th>Date Création</th>
    		<th>A propos</th>
    		<th>Lecture</th>
    		<th>Ajout Theme</th>
    		<th>Ajout Message</th>
    		<th>Moderateur</th>
    		<th>Suppression Thme</th>
    		<th>Suppression Message</th>
