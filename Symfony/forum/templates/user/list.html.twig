			<th>Utilisateur {{ i.id }}</li>
			<th>{{ i.pseudo }}</li>
			<th>{{ i.passwd }}</li>
			<th>{ {{ i.date|date}} </li>
			<th>{{ i.about }}</li>
			{%  for role in res %} 
				<th>{%  if  role in i.roles %}oui{% else %}non{% endif %}</th>
			{% endfor %}
			<th><a href="/user/update/{{i.id}}">Modifier</a></th>
			<th><a href="/user/delete/{{i.id}}">Supprimer</a></th>
			</th>
		</tr>
		{% endfor %}
    </table>
</div>
{% endblock %}
